<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-container">
        <h2>Connexion</h2>
        <div class="error_explanation">
        </div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { label_html: { class: "sr-only" }, input_html: { class: "input-lg" }}, html: { class: "new_session" }) do |f| %>

          <% if flash[:alert] %>
          <div class="alert alert-danger">
            <%= flash[:alert] %>
          </div>
          <% end %>

          <div class="form-inputs">
            <%= f.input :email, label: "Email", placeholder: "Email", required: false, autofocus: true %>
            <%= f.input :password, label: "Mot de passe", placeholder: "Mot de passe", required: false %>
            <%= f.hidden_field :remember_me, value: 1 if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Connexion", class: "btn-lg btn-action" %>
          </div>
        <% end %>

        <div class="shared-links">
          <%= link_to "J'ai perdu mon mot de passe", new_password_path(:user), rel: :nofollow %><br>
          <%= link_to "CrÃ©er un compte", "#", id: "create_an_account", rel: :nofollow %>
        </div>
      </div>
    </div>
  </div>
</div>
