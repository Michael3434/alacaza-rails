<% content_for :title, "Alacaza | LES BLEUS EN ACTION, LES PIZZAS A LA MAISON !" %>
<% content_for :description, "Pour soutenir les Bleus* la pizzeria THE ART vous propose en exclusivité ses magnifiques pizzas, ses fabuleuses crèpes salées et sucrées et son merveilleux Tiramisu maison ! " %>
<% content_for :og_url, "alacaza-staging.herokuapp.com/commande" %>
<% content_for :og_title, "Alacaza | LES BLEUS EN ACTION, LES PIZZAS A LA MAISON !" %>
<% content_for :og_description, "Pour soutenir les Bleus* la pizzeria THE ART vous propose en exclusivité ses magnifiques pizzas, ses fabuleuses crèpes salées et sucrées et son merveilleux Tiramisu maison ! " %>
<% content_for :canonical, commande_path %>

<div class="container">
  <div class="photos-container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="header">
        <div class="row">
          <div class="title text-center space-4">
            Alacaza en partenariat avec <br>
          </div>
          <div class="row">
            <div class="col-sm-8 col-sm-offset-3">
              <div class="col-sm-3">
                 <div class="logo"><%= image_tag ("theart/logo.jpg") %></div>
              </div>
              <div class="col-sm-8">
                <div class="brand">
                  <strong>The Art Pizzeria</strong>, <span class="address">Saint-Ouen</span>
                  <%= link_to "https://www.tripadvisor.fr/Restaurant_Review-g227615-d8661951-Reviews-The_Art-Saint_Ouen_Seine_Saint_Denis_Ile_de_France.html", target: :blank do  %>
                    <div class="trip">
                      <%= image_tag ("theart/tripadvisor.jpg") %>
                      <span>27 avis</span>
                    </div>
                    <% end %>
                    <div class="review">
                      "Pizzas excellentes, produits frais, très bonne accueil, je le recommande à tout le monde les yeux fermés !"
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr>
        <div class="text-center">LE MENU</div>
        <div class="row">
          <div class="img-wrapper space-top-4 pizza-carousel">
            <div class="col-sm-4 space-4">
            <%= link_to "http://res.cloudinary.com/dyp0skivf/image/upload/a_auto_right/v1468101026/pizzas_hkftbo.jpg" do %>
              <%= image_tag ("http://res.cloudinary.com/dyp0skivf/image/upload/a_auto_right/v1468101026/pizzas_hkftbo.jpg") %>
            <% end %>
            </div>
            <div class="col-sm-4 space-4">
              <%= link_to "http://res.cloudinary.com/dyp0skivf/image/upload/a_auto_right/v1468101026/crepes_kimfit.jpg" do %>
                <%= image_tag ("http://res.cloudinary.com/dyp0skivf/image/upload/a_auto_right/v1468101026/crepes_kimfit.jpg") %>
              <% end %>
            </div>
            <div class="col-sm-4 space-4">
              <%= link_to "http://res.cloudinary.com/dyp0skivf/image/upload/a_auto_right/v1468101026/drinks_adufl7.jpg" do %>
                <%= image_tag ("http://res.cloudinary.com/dyp0skivf/image/upload/a_auto_right/v1468101026/drinks_adufl7.jpg") %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
