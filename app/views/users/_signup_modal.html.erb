<%= render layout: "layouts/modal", locals: { modal_name: "signup", modal_size: "", modal_title: "Rejoindre mon immeuble" } do %>
  <div class="step-1">
    <table class="modal-layout">
      <tbody>
        <tr>
          <td>
            <div class="signup_form">
              <%= simple_form_for :user, remote: true,
                                            url: registration_path("user"),
                                           data: { type: :json, spinnable: true },
                                        wrapper: :vertical_form,
                                       defaults: { label_html: { class: "sr-only"},
                                     input_html: { class: "" }},
                                           html: { class: "form form-horizontal text-center", id: "new_user" } do |f| %>
                <%= f.input :first_name, placeholder: "Prénom" %>
                <%= f.input :last_name, placeholder: "Nom" %>
                <%= f.input :floor, include_blank: false, placeholder: "Votre étage", as: :string, input_html: { type: "number" } %>
                <%= f.input :door, include_blank: false, placeholder: "Votre numéro d'appartement", as: :string, input_html: { type: "number" }  %>
                <%= f.input :building_id, label: false, collection: buildings_collection, as: :select, placeholder: "-- Choisissez votre immeuble --", input_html: { class: "js-example-basic-single" } %>
                <%= f.input :building_access, placeholder: "Mot de passe de votre immeuble" %>
                <%= f.input :email, placeholder: "Email" %>
                <%= f.input :password, placeholder: "Mot de passe", required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
                <%= button_tag "Rejoindre mon immeuble", type: "submit", class: "btn btn-lg btn-action space-1 space-top-1" %>
                <p class="want-to-signin">Déjà inscrit ? <%= link_to "Se connecter", "#", class: "" %></p>
              <% end %>
            </div>
          </td>
        </tr>
      <tbody>
    </table>
  </div>
  <div class="step-2 text-center"  style="display:none;">
    <p class="modal-info text-center">Félicitation ! Vous allez être redirigé vers la messagerie de votre immeuble<span class="immeuble"></span> dans quelques secondes..</p>
     <p class="signature">L'Équipe Alacaza with <i class="fa fa-heart"></i></p>
    <i class="ion-loading-c"></i>
  </div>

  <div class="step-3 text-center"  style="display:none;">
    <p class="modal-info text-center">Cohome n’est pas encore disponible dans votre ville mais pour que nous arrivions encore plus vite, parlez-en autour de vous ! </p>
    <p class="signature">L'Équipe Cohome with <i class="fa fa-heart"></i></p>
    <span class="btn btn-action bnt-lg btn-closing">Fermer</span>
  </div>

<% end %>
