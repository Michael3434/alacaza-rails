<%= render layout: "layouts/modal", locals: { modal_name: "signin", modal_title: "Se connecter", modal_size: "modal-xs" } do %>
  <div id="signin_form_container">
    <div class="row">
      <div class="error_explanation">
      </div>
    </div>
    <%= simple_form_for :user, remote: true,
                                  url: session_path(:user),
                                 data: { type: :json, spinnable: true },
                              wrapper: :vertical_form,
                                 html: { class: "form form-horizontal new_session text-center" } do |f| %>

      <%= f.input :email, label: "Email", placeholder: "Email", required: false, label_html: { class: "sr-only"}, input_html: { class: "input-lg" } %>
      <%= f.input :password, label: "Mot de passe", placeholder: "Mot de passe", required: false, label_html: { class: "sr-only"}, input_html: { class: "input-lg" } %>
      <%= f.hidden_field :remember_me, label: "Se souvenir de moi", value: 1 if devise_mapping.rememberable? %>

      <div class="row">
        <%= button_tag "Se connecter", type: "submit", class: "btn btn-lg btn-action space-2" %>
      </div>
      <div class="row">
        <div class="col-md-6 col-xs-6">
          <div class="password-reset">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <div class="shared-links">
              <%= link_to "J'ai perdu mon mot de passe", new_password_path(:user), rel: :nofollow, target: "_blank" %>
            </div>
          <% end -%>
          </div>
        </div>
        <div class="col-md-6 col-xs-6">
          <%= link_to "Sâ€™inscrire", "#", class: "want-to-signup" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
